{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": true
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "telescope": {
    "find_files_command": [
      "rg",
      "--color",
      "never",
      "--files",
      "--no-ignore-vcs"
    ],
    "grep_command": [
      "rg",
      "--color=never",
      "--no-heading",
      "--with-filename",
      "--line-number",
      "--column",
      "--smart-case",
      "--no-ignore-vcs"
    ]
  }
}
